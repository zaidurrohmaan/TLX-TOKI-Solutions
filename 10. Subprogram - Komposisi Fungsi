[CODE #2]
[THIS CODE WILL RESULT WA (80 pts)]

#include <iostream>
#include <cmath>
using namespace std;

int fx(int a, int b , int x){
    return abs(a*x+b);
}

int main(int argc, char const *argv[])
{
  int  a,b,x,k;
  cin >> a >> b >> k >> x;

  int result;
  int temp = fx(a,b,x);

  if(k==1){
    cout << temp;
  }
  else{
    for(int i=2;i<=k;i++){
      result = abs(a*temp+b);
      if(i>=2){
        temp = result;
      }
      else{
        temp = temp;
      }
      
    }
  }
  cout<<result;
}
